{
  "name": "reactive-ecs",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky",
    "test": "npx jest",
    "build": "rm -rf ./dist/cjs && npx tsc -p tsconfig.build.json"
  },
  "author": "Justin Cotarla",
  "license": "BSD-3-Clause",
  "description": "A reactive ECS framework for the browser",
  "files": [
    "src",
    "!src/**/*.test.ts",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/cjs/index.d.ts"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "jest --findRelatedTests --passWithNoTests",
      "eslint"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}